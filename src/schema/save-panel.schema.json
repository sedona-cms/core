{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "A Save Panel",
  "additionalProperties": false,
  "default": {
    "label": "Save",
    "color": "primary",
    "size": "lg"
  },
  "properties": {
    "label": {
      "type": "string",
      "title": "The button label",
      "default": "Save"
    },
    "color": {
      "type": "string",
      "title": "The button color",
      "default": "primary"
    },
    "size": {
      "type": "string",
      "title": "The button size",
      "default": "lg",
      "enum": ["xs", "sm", "md", "lg", "xl"]
    }
  }
}
